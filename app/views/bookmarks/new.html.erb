<h1>New Bookmark for <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.order(:title), prompt: "Choose a Movie" %>
  <%= f.input :comment %>
  <%= f.submit "Create a Bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to List', list_path(@list) %>
