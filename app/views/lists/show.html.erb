<h1><%= @list.name %></h1>

<h2>Movies available to add:</h2>
<ul>
  <% @movies.each do |movie| %>
    <li>
      <%= movie['title'] %>
      <%= link_to 'Add to List', list_bookmarks_path(@list, { bookmark: { movie_id: movie['id'] } }), method: :post %>
    </li>
  <% end %>
</ul>

<h2>Movies in this list:</h2>
<ul>
